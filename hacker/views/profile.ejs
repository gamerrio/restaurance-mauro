          halfmoon.toggleDarkMode();
        }
        toggleDemo();
      </script>
</head>
<body>
  <div class="modal" id="modal-1" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <!--Card-->
    <div class="card">
      <div class="container-fluid">
        <div class="row">
          <div class="col-3 "><image class="img-fluid rounded" src="<%=userpic %>"></image></div>
          <div class="col-1 "></div>
            <div class="col-8 ">
              <h3 class="text"><%=useritem%></</h3> <h5 class="text-md-left"><strong>Price: <%=userprice%></</strong></h5>
            <p class="text-md-center text-justify"> 
              <h5><%=userfood%></
                <div class="btn-group py-20" role="group" aria-label="Basic example">
                  <button type="button" class="btn " id="increment-count">+</button>
                  <button type="button" class="btn " id="total-count" >0</button>
                  <button type="button" class="btn " id="decrement-count">-</button>
                </div><br>
                <button class="btn" ><i class="fa-solid fa-basket-shopping"></i> Add to Cart</button>


            </h5>
          </p>
          </div><br><br>
          <div class="col-1 "></div>
      </div>
  </div>
  </div>
<!--end-->
    </div>
  </div>
  
    <!-- Navbar with content justified between -->
<nav class="navbar justify-content-between"> <!-- justify-content-between = justify-content: space-between -->
    <!-- Navbar content with menu button -->
    <div class="navbar-content">
      <a href="#modal-1" class="btn" data-toggle="tooltip" data-title="Tooltip message" role="button">
        <i class="fa fa-bars" aria-hidden="true"></i> 
      </a>
    </div>
    <!-- Navbar brand -->
    <a href="#" class="navbar-brand">
      <img src="/logo.png">Martian Bistro
    </a>
    <!-- Navbar content with sign up button -->
    <div class="navbar-content px-lg-20">
        <div class="btn-group dropdown with-arrow" role="group">
          <button class="btn btn-square" data-toggle="dropdown" type="button" id="dropdown-toggle-btn-1" aria-haspopup="true" aria-expanded="false"><img src="/user.png" class="rounded-circle" width="40" height="40">
            <i class="fa fa-angle-down" aria-hidden="true"></i>
            <span class="sr-only">Open dropdown</span> <!-- sr-only = only for screen readers -->
          </button>
          <div class="custom-switch">
            <input type="checkbox" class="px-20" id="switch-2" onclick="toggleDemo()">
            <label for="switch-2"><i class="fa-solid fa-moon"></i>&nbsp;</label>
          </div>
        <button class="btn rounded" type="button"><i class="fa-solid fa-cart-shopping"></i> 1 </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-toggle-btn-1">
            <a class="dropdown-item" href="#">Profile</a>
            <a class="dropdown-item" href="/signup.html">Settings</a>
            <a class="dropdown-item btn-danger" href="/login.html">Log out</a>a
          <div class="dropdown-divider"></div>
         
          </div>
        </div>
    </div>
  </nav>

<% items.forEach(item => { %>
<div class="card">
  <div class="container-fluid">
    <div class="row">
      <div class="col-3 "><image class="img-fluid rounded" src="<%= item.pic %>"></image></div>
      <div class="col-1 "></div>
        <div class="col-8 ">
          <h3 class="text"><%=item.item%></</h3> <h5 class="text-md-left"><strong>Price: <%=item.price%></</strong></h5>
        <p class="text-md-center text-justify"> 
          <h5><%=item.food%></
            <div class="btn-group py-20" role="group" aria-label="Basic example">
            </div>
            <button class="btn" ><i class="fa-solid fa-basket-shopping"></i> Add to Cart</button>


        </h5>
      </p>
      </div><br><br>
      <div class="col-1 "></div>
  </div>
</div>
<% }); %>




</div>


<!--end-->


<script>
  const incrementCount = document.getElementById("increment-count");
  const decrementCount = document.getElementById("decrement-count");
  const totalCount = document.getElementById("total-count");
  var count = 0;
  totalCount.innerHTML = count;
  const handleIncrement = () => {
    count++;
    totalCount.innerHTML = count;
  };
  const handleDecrement = () => {
    count--;
    if (count=0){
      totalCount.innerHTML = 0;
    } else{
    totalCount.innerHTML = count;
    }
  };
  incrementCount.addEventListener("click", handleIncrement);
  decrementCount.addEventListener("click", handleDecrement);
  </script>

<script src="https://cdn.jsdelivr.net/npm/halfmoon@1.1.1/js/halfmoon.min.js"></script>
</body>
</html>